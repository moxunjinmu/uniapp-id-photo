{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^my-(.*)": "@/components/$1.vue",
      "^(.*)": "@/components/$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },

    {
      "path": "pages/toolbox/index",
      "style": {
        "navigationBarTitleText": "工具箱"
      }
    },
    {
      "path": "pages/history/index",
      "style": {
        "navigationBarTitleText": "历史"
      }
    },
    {
      "path": "pages/profile/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages-sub",
      "pages": [
        {
          "path": "photo-edit/index",
          "style": {
            "navigationBarTitleText": "照片编辑"
          }
        },
        {
          "path": "background-change/index",
          "style": {
            "navigationBarTitleText": "背景更换"
          }
        },
        {
          "path": "size-adjust/index",
          "style": {
            "navigationBarTitleText": "尺寸调整"
          }
        }
      ]
    },
    {
      "root": "pages-index",
      "pages": [
        {
          "path": "search/index",
          "style": {
            "navigationBarTitleText": "搜索"
          }
        },
        {
          "path": "detail/index",
          "style": {
            "navigationBarTitleText": "证件照详情"
          }
        },
        {
          "path": "camera/index",
          "style": {
            "navigationBarTitleText": "拍摄证件照",
            "navigationStyle": "custom"
          }
        },
        {
          "path": "photo-result/index",
          "style": {
            "navigationBarTitleText": "拍照结果"
          }
        },
        {
          "path": "login/index",
          "style": {
            "navigationBarTitleText": "登录"
          }
        }
      ]
    }
  ],
  "preloadRule": {
    // 当我们进入了pages/index/index页面以后就会预下载pages-index分包
    "pages/index/index": {
      "network": "all", //在指定网络下预下载，可选值为：all（不限网络）、wifi（仅wifi下预下载）
      "packages": ["pages-index"] //进入页面后预下载分包
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "证件照小助手",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#8C8C8C",
    "selectedColor": "#4080FF",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home-active.png"
      },
      {
        "pagePath": "pages/toolbox/index",
        "text": "工具箱",
        "iconPath": "static/tabbar/toolbox.png",
        "selectedIconPath": "static/tabbar/toolbox-active.png"
      },
      {
        "pagePath": "pages/history/index",
        "text": "历史",
        "iconPath": "static/tabbar/history.png",
        "selectedIconPath": "static/tabbar/history-active.png"
      },
      {
        "pagePath": "pages/profile/index",
        "text": "我的",
        "iconPath": "static/tabbar/profile.png",
        "selectedIconPath": "static/tabbar/profile-active.png"
      }
    ]
  }
}
